.col-sm-12.col-md-4
  = render partial:"sidebar"
.col-sm-12.col-md-4
  -if notice
    %p#notice.alert.alert-success
      = notice
  %form{:action => cal_scholes_scholes_path, :method => "post", :name => "scholes"}
    = hidden_field_tag :authenticity_token, form_authenticity_token
    .row.form-group
      %span.col-md-5
        Stock Price
        %input{:type=>"text", :required => true, :name => "stock_price"}
    .row.form-group
      %span.col-md-5
        Years
        %input{:type=>"text", :required => true, :name => "years"}
    .row.form-group
      %span.col-md-9
        = radio_button_tag 'call_put_scholes', 'call'
        Call Scholes Option
    .row.form-group
      %span.col-md-9
        = radio_button_tag 'call_put_scholes', 'put'
        Put Scholes Option
    .row.form-group
      %span.col-md-5
        %button{:name => "submit", :type => "submit", :class =>"btn btn-success"}
          Submit

  - if @schole
    .row
      .sub-val.form-group
        %span.col-md-9
          Call Option
          = @schole.cal_option_val
      .sub-val.form-group
        %span.col-md-9
          Put Option
          = @schole.put_option_val
      .sub-val.form-group
        %span.col-md-9
          Years
          = @schole.years
      .sub-val.form-group
        %span.col-md-9
          Stock Price
          = @schole.stock_price
