.col-sm-12.col-md-4
  = render partial:"sidebar"
.col-sm-12.col-md-4
  -if notice
    %p#notice.alert.alert-success
      = notice
  %form{:action => cal_scholes_scholes_path, :method => "post", :name => "scholes_price"}
    = hidden_field_tag :authenticity_token, form_authenticity_token
    .row.form-group
      %span.col-md-5
        Interest Rate
        %input{:type=>"text", :required => true, :name => "risk_free"}
    .row.form-group
      %span.col-md-5
        Volatility
        %input{:type=>"text", :required => true, :name => "volatility"}
    .row.form-group
      %span.col-md-5
        Strike Price
        %input{:type=>"text", :required => true, :name => "strike_price", :value => "65", :disabled => true}
    .row.form-group
      %span.col-md-5
        %button{:name => "submit", :type => "button", :class =>"btn btn-success", :id=>"price_update" }
          Submit
    .row.form-group
      %span.col-md-5
        Display Price
      %span.col-md-7#display_price


= javascript_include_tag "scholes_wrk"